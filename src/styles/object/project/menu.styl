.p
  &-menu
    padding-top per(158, 750)
    +pc()
      padding-top per(230, 2560)

    h2
      +sp()
        font-size (30 / 750) * 100vw
        width per(650, 750)
        margin-left per(140, 750)
      +pc()
        font-size (34 / 2560) * 100vw
        z-index 10
        text-align center
        position absolute
        // top (134 / 2560) * 100vw
        top (260 / 2560) * 100vw
        left 50%
        // transform translateX(-50%)
        transform translate(-50%, -50%)

      &:before
        content ''
        display block
        width (60 / 750) * 100vw
        height (4 / 750) * 100vw
        background #000
        position absolute
        top 50%
        left 0
        transform translate(-150%, -100%)
        +pc()
          left -90%
          transform translateY(-50%)
          width (60 / 2560) * 100vw
          height (4 / 2560) * 100vw

    h3
      font-size (38 / 750) * 100vw
      +pc()
        font-size (38 / 2560) * 100vw

    .p-section
      margin-bottom per(180, 650)
      +pc()
        margin-bottom per(600, 2560)

    &-nav
      position fixed
      // top (230 / 2560) * 100vw
      // top (230 / 2560) * 100vw + (34 / 2560) * 100vw
      top (181 / 650) * 100vw
      left 0
      width 100vw
      // height (150 / 650) * 100vw
      height (320 / 750) * 100vw
      background #fff
      z-index 10
      +pc()
        top (294 / 2560) * 100vw
        height (130 / 2560) * 100vw


      &.is-fixed
        top (150 / 750) * 100vw
        +pc()
          top (230 / 2560) * 100vw

      ul
        display flex
        +sp()
          flex-wrap wrap

      a
        display block

        &:hover
          font-style italic

      &__food
        +sp()
          margin-top per(30, 650)
        li
          font-family YanoneKaffeesatz-Bold
          font-size (48 / 750) * 100vw
          line-height 1.1
          // margin 0 per(64, 2560)
          // padding 0 per(64, 2560)
          position relative
          +sp()
            width 49.8%
            text-align center

          +pc()
            font-size (70 / 2560) * 100vw
            // margin 0 per(64, 2560)
            padding 0 per(64, 2560)


          +sp()
            &:before
              content ''
              display block
              position absolute
              left 0
              top 0
              width (6 / 2560) * 100vw
              // height (98 / 2560) * 100vw
              height 100%
              background #000

          &:after
            content ''
            display block
            position absolute
            right 0
            top 0
            width (6 / 2560) * 100vw
            // height (98 / 2560) * 100vw
            height 100%
            background #000

          &:nth-of-type(1)
            &:after
              +sp()
                display none
            +pc()
              padding-left 0

          &:nth-of-type(3)
            &:after
              +sp()
                display none


          &:nth-of-type(4)
            +pc()
              padding-right 0

            &:after
              +pc()
                display none

        a
          color #000

        &.is-fixed
          position fixed
          top 0
          left 0
          z-index 100

      &__pdf
        margin-top per(50, 650)
        +sp()
          display flex
          flex-wrap nowrap
          justify-content space-between
        +pc()
          margin-top per(12, 2560)

        li
          font-size (26 / 650) * 100vw
          // padding 0 per(64, 750) 0 0
          position relative
          line-height 1
          +sp()
            width 25%
            padding-right 1.5%
            // padding 0 4%
          +pc()
            font-size (30 / 2560) * 100vw
            padding 0 per(226, 2560) 0 0

          &:nth-of-type(1)
            a
              &:after
                +sp()
                  width 90%

          &:nth-of-type(2)
            a
              &:after
                +sp()
                  width 95%
            +pc()
              padding 0 per(244, 2560) 0 0

          &:nth-of-type(3)
            a
              &:after
                +sp()
                  width 88%
            +pc()
              padding 0 per(220, 2560) 0 0

          &:nth-of-type(4)
            a
              &:after
                +sp()
                  width 90%
            +sp()
              padding-right 0
            +pc()
              padding-right 0

        a
          color #f37779
          &:after
            content ''
            display block
            width 100%
            height (4 / 750) * 100vw
            background #ed7473
            +pc()
              height (2 / 2560) * 100vw


    &-wrap
      position relative

      +pc()
        // margin-top per(-180, 2200)
        // margin-top per(-360, 2200)

      .p-menu-thumb
        position fixed
        // top (360 / 2200) * 100vw
        top (230 / 2560) * 100vw
        right per(180, 2560)
        z-index 11

    &-showbtn
      margin-top per(390, 650)
      width 100%
      font-size (28 / 650) *100vw
      color #fff
      background #ed7473
      text-align center
      cursor pointer
      // padding-top per(390, 650)
      padding per(20, 650)
      border-radius 4px
      &.is-show
        border (2 / 650) * 100vw solid #ed7473
        color #ed7473
        background #fff

      +pc()
        display none

    &-group
      // padding-top per(290, 650)
      padding-top per(390, 650)
      +pc()
        // padding-top per(130, 2200)
        // グロナビ + menuナビ 分の高さ
        // padding-top per(360, 2200)
        padding-top per(400, 2200)

    // // .p-menu-thumb
    // //   position fixed
    // //   // top (360 / 2200) * 100vw
    // //   top (230 / 2560) * 100vw
    // //   right per(180, 2560)
    // //   z-index 11
    &-info
      display flex
      +sp()
        flex-wrap wrap

      +pc()
        justify-content space-between
        width per(1226, 2200)
        // padding-top per(130, 2560)
        // padding-top per(130, 2200)
        // padding-top per(130, 2200)
        // padding-top per(160, 2200)

    &-thumb
      +sp()
        display none

      +pc()
        // width per(810, 2200)
        width per(810, 2560)

      figure
        width 100%

    // &-group
    // display flex
    // +pc()
    // justify-content space-between
    &-item
      +sp()
        width 100%

      +pc()
        cursor pointer
        width per(564, 1226)
        margin-bottom per(60, 1226)

      .p-sub-title
        font-family Noto
        font-size (22 / 750) * 100vw
        margin-left per(114, 750)
        line-height 1.4

        +pc()
          font-size (22 / 2560) * 100vw
          // margin-left per(70, 1226)
          margin 0 0 per(30, 564) per(60, 564)

      .u-font-noto
        font-size (23 / 2560) * 100vw
        line-height 1.8

      &__desc
        +pc()
          font-size (23 / 2560) * 100vw
          line-height 1.2

      &__img
        display none
        &.is-show
          display block