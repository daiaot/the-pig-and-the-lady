.p
  &-menu
    padding-top per(158, 750)

    +pc()
      padding-top per(230, 2560)

    h2
      font-size (30 / 750) * 100vw

      +pc()
        font-size (34 / 2560) * 100vw
        z-index 10
        text-align center
        position absolute
        // top (134 / 2560) * 100vw
        top (260 / 2560) * 100vw
        left 50%
        // transform translateX(-50%)
        transform translate(-50%, -50%)

      &:before
        content ''
        display block
        width (60 / 2560) * 100vw
        height (4 / 2560) * 100vw
        background #000
        position absolute
        top 50%
        left -90%
        transform translateY(-50%)

    h3
      font-size (38 / 750) * 100vw

      +pc()
        font-size (38 / 2560) * 100vw

    .p-section
      margin-bottom per(180, 650)

      +pc()
        margin-bottom per(600, 2560)

    &-nav
      position fixed
      // top (230 / 2560) * 100vw
      // top (230 / 2560) * 100vw + (34 / 2560) * 100vw
      top (294 / 2560) * 100vw
      left 0
      width 100vw
      height (130 / 2560) * 100vw
      background #fff
      z-index 10

      &.is-fixed
        top (230 / 2560) * 100vw

      ul
        display flex

      a
        display block

        &:hover
          font-style italic

      &__food
        li
          font-family YanoneKaffeesatz-Bold
          font-size (70 / 2560) * 100vw
          line-height 1.1
          // margin 0 per(64, 2560)
          padding 0 per(64, 2560)
          position relative

          +pc()
            font-size (70 / 2560) * 100vw
            // margin 0 per(64, 2560)
            padding 0 per(64, 2560)

          &:after
            content ''
            display block
            position absolute
            right 0
            top 0
            width (6 / 2560) * 100vw
            // height (98 / 2560) * 100vw
            height 100%
            background #000

          &:nth-of-type(1)
            padding-left 0

          &:nth-of-type(4)
            padding-right 0

            &:after
              display none

        a
          color #000

        &.is-fixed
          position fixed
          top 0
          left 0
          z-index 100

      &__pdf
        margin-top per(40, 750)

        +pc()
          margin-top per(12, 2560)

        li
          font-size (30 / 2560) * 100vw
          // padding 0 per(64, 750) 0 0
          position relative
          line-height 1

          +pc()
            font-size (30 / 2560) * 100vw
            padding 0 per(226, 2560) 0 0

          &:nth-of-type(2)
            padding 0 per(244, 2560) 0 0

          &:nth-of-type(3)
            padding 0 per(220, 2560) 0 0

          &:nth-of-type(4)
            padding-right 0

        a
          color #f37779

          &:after
            content ''
            display block
            width 100%
            height (4 / 750) * 100vw
            background #ed7473

            +pc()
              height (2 / 2560) * 100vw

    &-wrap
      position relative

      +pc()
        // margin-top per(-180, 2200)
        // margin-top per(-360, 2200)

      .p-menu-thumb
        position fixed
        // top (360 / 2200) * 100vw
        top (230 / 2560) * 100vw
        right per(180, 2560)
        z-index 11

    &-group
      +pc()
        // padding-top per(130, 2200)
        // グロナビ + menuナビ 分の高さ
        // padding-top per(360, 2200)
        padding-top per(400, 2200)

    // // .p-menu-thumb
    // //   position fixed
    // //   // top (360 / 2200) * 100vw
    // //   top (230 / 2560) * 100vw
    // //   right per(180, 2560)
    // //   z-index 11
    &-info
      display flex

      +pc()
        justify-content space-between
        width per(1226, 2200)
        // padding-top per(130, 2560)
        // padding-top per(130, 2200)
        // padding-top per(130, 2200)
        // padding-top per(160, 2200)

    &-thumb
      +sp()
        display none

      +pc()
        // width per(810, 2200)
        width per(810, 2560)

      figure
        width 100%

    // &-group
    // display flex
    // +pc()
    // justify-content space-between
    &-item
      +pc()
        width per(564, 1226)
        margin-bottom per(60, 1226)

      .p-sub-title
        font-family Noto
        font-size (22 / 750) * 100vw
        margin-left per(114, 750)
        line-height 1.4

        +pc()
          font-size (22 / 2560) * 100vw
          // margin-left per(70, 1226)
          margin 0 0 per(30, 564) per(60, 564)

      .u-font-noto
        font-size (23 / 2560) * 100vw
        line-height 1.8

      &__desc
        +pc()
          font-size (23 / 2560) * 100vw
          line-height 1.2
