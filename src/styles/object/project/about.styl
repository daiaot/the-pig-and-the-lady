.p
  &-about
    padding-top per(158, 750)
    +pc()
      padding-top per(230, 2560)

    .p-content
      +sp()
        position relative
        margin-top per(54, 750)

    .p-section
      &:nth-of-type(1)
        margin-top per(70, 750)
        +sp()
          margin-bottom per(250, 750)
        +pc()
          margin per(120, 2200) 0 per(140, 2200)
      &:nth-of-type(2)
        +sp()
          margin-bottom per(250, 750)
        +pc()
          margin-bottom per(270, 2200)

      &:nth-of-type(4)
        +sp()
          margin-bottom per(250, 750)
        +pc()
          margin-bottom per(250, 2560)


    h2
      font-size (30 / 750) * 100vw
      +sp()
        width per(650, 750)
        margin-left per(140, 750)
      +pc()
        font-size (34 / 2560) * 100vw
        z-index 10
        text-align center
        position absolute
        top (260 / 2560) * 100vw
        left 50%
        transform translateX(-50%)
      &:before
        content ''
        display block
        width (60 / 750) * 100vw
        height (4 / 750) * 100vw
        background #000
        position absolute
        top 50%
        left 0
        transform translate(-150%, -100%)
        +pc()
          left -90%
          transform translateY(-50%)
          width (60 / 2560) * 100vw
          height (4 / 2560) * 100vw


    &-concept
      .l-col--2
        +pc()
          justify-content space-between
        & > p
          width 100%
          +pc()
            width per(1050, 2200)

        &:nth-of-type(3)
          +pc()
            align-items center

        .p-about-concept__figure
          width 100%
          +pc()
            width per(1050, 2200)
          & > img
            +pc()
              width 100%
    &-story
      &__movie
        +pc()
          width per(1920, 2200)
          margin auto
          img
            width 100%
    &-owners
      padding-bottom per(120, 650)
      border-bottom (4 / 650) * 100vw dotted #000
      +pc()
        padding-bottom per(250, 2200)
        border-bottom (4 / 2560) * 100vw dotted #000

      .l-col--2
        +pc()
          justify-content space-between
        .p-about-owners__desc
          width 100%
          +pc()
            width per(932, 2200)
        .p-about-owners__figure
          width 100%
          +pc()
            width per(1150, 2200)

    &-access
      .l-col--2
        +pc()
          justify-content space-between
        .p-about-access__figure
          width 100%
          +pc()
            width per(1050, 2200)
        .p-about-access__info
          width 100%
          +pc()
            text-align right
            width per(1050, 2200)
