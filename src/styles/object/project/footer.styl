.p-footer
  // background #fff
  // padding percentage((30 / 1440)) percentage((44 / 1440))
  // position relative
  margin-bottom per(140, 2580)

  .l-inner
    max-width 2200px
    width per(2200, 2560)
    margin auto
    position relative

    .p-copyright
      position absolute
      left 0
      bottom per(-40, 432)

      p
        font-size (26 / 2520) * 100vw
        margin-bottom 0

  &-logo
    width 50%

    svg
      width per(388, 1100)

    &__image
      background url('/assets/images/common/logo02.svg') no-repeat 50% 50%
      background-size 100% auto
      width per(390, 2560)
      height 0
      padding-top per(304, 2560)

  &-info
    text-align right

    p
      font-size (42 / 2560) * 100vw
      line-height 2
      margin-bottom per(58, 1100)

      &:nth-of-type(1)
        margin-bottom 0

  &-link
    margin-bottom per(48, 2560)

    li
      display inline-block
      margin-right per(50, 2560)

      &:last-child
        margin-right 0

    a
      color #ed7473
      font-family YanoneKaffeesatz-Bold
      font-size (54 / 2560) * 100vw

      &:after
        content ''
        display block
        width 100%
        height 0.2rem
        // padding-top per(2 / 212) * 100vw
        background #ed7473
        transition opacity 0.4s

      &:hover
        &:after
          opacity 0.6

  &-sns
    display flex
    flex-wrap nowrap
    justify-content flex-end
    width 100%

    li
      width per(96, 1100)
      position relative
      margin-right per(10, 1100)

      &:before
        font-family FuturaMdCnBT
        font-size (46 / 2560) * 100vw
        color #ed7473
        font-weight bold
        position absolute
        top 50%
        left 0
        transform translate(-150%, -50%)

      &:nth-of-type(1)
        margin-right per(132, 1100)

        &:before
          content 'U.S.'

      &:nth-of-type(2)
        &:before
          content 'JP'

      &:nth-of-type(4)
        margin-right 0

      span
        color #ed7473
        font-size (46 / 2560) * 100vw
        display inline

      a
        display inline-block
        vertical-align middle
        width 100%
        padding-top 100%
