.p
  &-gallery
    padding-top per(158, 750)
    +pc()
      padding-top per(230, 2560)

    h2
      font-size (38 / 750) * 100vw

      +pc()
        font-size (34 / 2560) * 100vw
        z-index 10
        text-align center
        position absolute
        // top (134 / 2560) * 100vw
        top (260 / 2560) * 100vw
        left 50%
        // transform translateX(-50%)
        transform translate(-50%, -50%)

    &-wrap
      display flex
      flex-wrap wrap
      justify-content space-between
      margin per(120, 2200) 0 0

      .l-col--column
        width per(420, 750)
        +pc()
          width per(420, 2200)

    &-col
      width per(420, 750)
      +pc()
        width per(871, 2200)
      &--column
        display flex
        flex-wrap wrap
        justify-content space-between
        width per(420, 750)
        +pc()
          width per(420, 2200)
        
        a
          flex-direction row


