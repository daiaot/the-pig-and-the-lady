.p
  &-gallery
    padding-top per(158, 750)

    +pc()
      padding-top per(230, 2560)

    .p-content
      +sp()
        position relative
        margin-top per(54, 750)

    .p-section
      &:nth-of-type(1)
        margin-top per(70, 750)

        +sp()
          margin-bottom per(250, 750)

        +pc()
          // margin-top per(120, 2200)
          margin-top 2%

    h2
      font-size (30 / 750) * 100vw

      +sp()
        width per(650, 750)
        margin-left per(140, 750)

      +pc()
        font-size (34 / 2560) * 100vw
        text-align center
        position absolute
        // top (260 / 2560) * 100vw
        // left 50%
        right per(250, 2560)
        // transform translateX(-50%)
        // z-index 100
        z-index 50
        top 5.15625vw
        // transform translate(-50%, -50%)
        transform translate(0%, -50%)

      &:before
        content ''
        display block
        width (60 / 750) * 100vw
        height (4 / 750) * 100vw
        background #000
        position absolute
        top 50%
        left 0
        transform translate(-150%, -100%)

        +pc()
          left -90%
          transform translateY(-50%)
          width (60 / 2560) * 100vw
          height (4 / 2560) * 100vw

    +sp()
      &-order
        &--1
          order 1

        &--2
          order 2

        &--3
          order 3

        &--4
          order 4

        &--5
          order 6

        &--6
          order 5

        &--7
          order 7

        &--8
          order 9

        &--9
          order 8

    &-wrap
      display flex
      flex-wrap wrap
      justify-content space-between

      .l-col--column
        width per(420, 650)

        +pc()
          max-width per(420, 2200)
          width per(420, 2200)

    &-col
      width per(432, 650)
      margin-bottom per(10, 650)
      // transition opacity 0.4s
      transition opacity .2s

      +pc()
        width per(871, 2200)
        max-width per(871, 2200)
        margin-bottom per(20, 2200)

      a&:hover
        // opacity .7
        opacity .5

      &:nth-of-type(2)
        +sp()
          width per(320, 650)

      &:nth-of-type(3)
        +sp()
          width per(320, 650)

      // &:nth-of-type(4)
      &:nth-of-type(5)
        +sp()
          width 100%

      // &:nth-of-type(6)
      &:nth-of-type(8)
        +sp()
          width 100%

      &--column
        display flex
        flex-direction column
        flex-wrap wrap
        justify-content space-between
        width per(208, 650)
        margin-bottom per(10, 650)
        +pc()
          width per(420, 2200)
          max-width per(420, 2200)
          margin-bottom per(20, 2200)


        a
          flex-direction row
          min-height 0%
          max-width 100%
          transition opacity 0.2s

          &:hover
            opacity .5

        &:nth-of-type(3)
          +sp()
            flex-direction row
            width 100%

            a
              width per(320, 650)
