html
  height 100%
  font-size 10px

  @include sp
    font-size (10 / 375) * 100vw

body
  position relative
  background-color #fff
  font-family 'NotoLight', '游ゴシック体', 'Yu Gothic', YuGothic, 'ヒラギノ角ゴ Pro', 'Hiragino Kaku Gothic Pro', 'メイリオ', 'Meiryo', sans-serif
  // font-family 'Noto Sans JP', sans-serif
  font-size 14px
  font-weight 300
  text-size-adjust none
  line-height 1.5
  color #000
  font-smoothing antialiased

  p
    font-family NotoDemiLight
    color #333

img
  max-width 100%
  vertical-align top

@keyframes flash
  30%
    opacity 0.6

  100%
    opacity 1

a
  text-decoration none
  color #000
  // &:hover
  // opacity 1
  // animation flash 1.5s

h1,
h2,
h3,
h4,
p,
ul,
dl,
dt,
dd
  margin 0
  padding 0

li
  list-style none

main
  display block

  +sp()
    overflow hidden

.mb15
  margin-bottom 15px

::selection
  background rgba(0, 0, 0, 0.99)
  color #fff

::-moz-selection
  background rgba(0, 0, 0, 0.99)
  color #fff

@media screen and (min-width: 795px) and (max-width: 1140px)
  html
    font-size (10 / 1140) * 100vw
